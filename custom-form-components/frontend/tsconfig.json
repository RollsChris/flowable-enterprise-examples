{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "baseUrl": ".",
    "paths": {
      "@flowable/forms/Model": ["./node_modules/@flowable/forms/src/flw/Model"],
      "@flowable/forms": ["./node_modules/@flowable/forms/src/flw/flwforms"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist", "example", "rollup.config.js"]
}
